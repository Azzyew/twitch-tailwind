{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/typescript/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "plugins": [],
  "rules": {
    "semi": [2, "always"],
    "eol-last": [2, "always"],
    "quotes": [2, "single", { "avoidEscape": true }],
    "vue/attribute-hyphenation": [0, "never"],
    "vue/singleline-html-element-content-newline": [0, "never"]
  }
}